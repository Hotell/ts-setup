{
  "name": "@martin_hotell/ts-setup",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "description": "TsLint/TS config done right",
  "keywords": [
    "tsconfig",
    "tslint",
    "typescript",
    "style-guides"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/hotell/ts-setup"
  },
  "author": "Martin Hochel <hochelmartin@gmail.com>",
  "license": "MIT",
  "engines": {
    "node": ">=8.5"
  },
  "scripts": {
    "postinstall": "lerna bootstrap",
    "cleanup": "lerna exec -- shx rm -rf dist",
    "prebuild": "npm run cleanup && npm run verify",
    "build": "tsc -b && lerna run --parallel build",
    "postbuild": "node scripts/copy.js && npm run size",
    "docs": "echo \"TODO: implement me\" && exit 1",
    "test": "jest -c ./config/jest.config.js",
    "test:watch": "npm t -- --watch",
    "test:coverage": "npm t -- --coverage",
    "test:ci": "npm t -- --ci",
    "validate-js": "tsc -p ./config && tsc -p ./scripts",
    "verify": "npm run validate-js && npm run style && npm run test:ci",
    "commit": "git-cz",
    "style": "npm run format -- --list-different && npm run lint",
    "style:fix": "npm run format:fix && npm run lint:fix",
    "format": "prettier --config config/prettier.config.js \"**/*.{ts,tsx,js,jsx,css,scss,sass,less,md}\"",
    "format:fix": "npm run format -- --write",
    "lint": "tslint --project tsconfig.json --format codeFrame",
    "lint:fix": "npm run lint -- --fix",
    "prerelease": "npm run build",
    "release": "lerna version --conventional-commits --changelog-preset angular",
    "postrelease": "node scripts/copy.js && npm run release:github && npm run release:npm",
    "release:github": "git push --no-verify --follow-tags origin master",
    "release:npm": "cd dist && npm publish",
    "size": "lerna run size"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint --config config/commitlint.config.js -E HUSKY_GIT_PARAMS",
      "pre-commit": "lint-staged",
      "pre-push": "npm run style && npm test -- --bail --onlyChanged"
    }
  },
  "lint-staged": {
    "**/*.{ts,tsx,js,jsx,css,scss,sass,less,md}": [
      "prettier --config config/prettier.config.js --write",
      "git add"
    ],
    "src/**/*.{ts,tsx}": [
      "npm run lint:fix",
      "git add"
    ]
  },
  "devDependencies": {
    "@commitlint/cli": "7.2.1",
    "@commitlint/config-conventional": "7.1.2",
    "@types/jest": "23.3.10",
    "@types/node": "8.10.*",
    "@types/prettier": "1.15.2",
    "@types/webpack-config-utils": "2.3.0",
    "commitizen": "3.0.5",
    "cross-var": "1.1.0",
    "cz-conventional-changelog": "2.1.0",
    "gzip-size-cli": "3.0.0",
    "husky": "1.2.0",
    "jest": "23.6.0",
    "jest-watch-typeahead": "0.2.0",
    "kleur": "3.0.1",
    "lerna": "3.6.0",
    "lint-staged": "8.1.0",
    "prettier": "1.15.3",
    "rollup": "0.67.4",
    "rollup-plugin-commonjs": "9.2.0",
    "rollup-plugin-json": "3.1.0",
    "rollup-plugin-node-resolve": "4.0.0",
    "rollup-plugin-replace": "2.1.0",
    "rollup-plugin-sourcemaps": "0.4.2",
    "rollup-plugin-terser": "3.0.0",
    "rollup-plugin-uglify": "6.0.0",
    "shx": "0.3.2",
    "standard-version": "4.4.0",
    "strip-json-comments-cli": "1.0.1",
    "ts-jest": "23.10.5",
    "tslib": "1.9.3",
    "tslint": "5.11.0",
    "tslint-config-prettier": "1.17.0",
    "tslint-config-standard": "8.0.1",
    "tslint-etc": "1.2.7",
    "tslint-react": "3.6.0",
    "typedoc": "0.13.0",
    "typescript": "3.2.2",
    "webpack-config-utils": "2.3.1"
  }
}
