{
  "packages": [
    "packages/*"
  ],
  "npmClient": "yarn",
  "useWorkspaces": true,
  "command": {
    "init": {
      "exact": true
    },
    "create": {
      "homepage": "https://github.com/hotell/ts-setup",
      "license": "MIT"
    },
    "version": {
      "allowBranch": [
        "master"
      ],
      "message": "chore(release): publish %s",
      "conventionalCommits": true
    },
    "publish": {
      "allowBranch": [
        "master"
      ],
      "message": "chore(release): publish %s",
      "conventionalCommits": true
    }
  },
  "ignoreChanges": [
    "**/__fixtures__/**",
    "**/__mocks__/**",
    "**/__tests__/**",
    "**/*.md"
  ],
  "version": "1.0.0"
}
