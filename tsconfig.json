{
  "compilerOptions": {
    "moduleResolution": "node",
    "module": "esnext",
    "target": "es5",
    "lib": [
      "dom",
      "es2018"
    ],
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "jsx": "react",
    "sourceMap": true,
    "stripInternal": true,
    "declaration": true,
    "declarationMap": true,
    "resolveJsonModule": true,
    "importHelpers": true,
    "noEmit": true,
    "composite": true
  },
  "references": [
    {
      "path": "./packages/ts-config",
    },
    {
      "path": "./packages/ts-lint-config"
    }
  ],
  "include": [
    "packages/"
  ],
  "compileOnSave": false
}
